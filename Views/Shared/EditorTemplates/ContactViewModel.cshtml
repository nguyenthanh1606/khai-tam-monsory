@model Frontend.Models.ContactViewModel

<div class="form-group required">
    @Html.LabelFor(m => m.CustomerName, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.CustomerName)
    </div>
</div>
<div class="form-group required">
    @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>
</div>
<div class="form-group required">
    @Html.LabelFor(m => m.Title, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>
</div>
<div class="form-group required">
    @Html.LabelFor(m => m.Body, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.Body, 10, 10, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Body)
    </div>
</div>
