@model Frontend.Models.ContactViewModel

<div class="form-group">
    @Html.TextBoxFor(m => m.CustomerName,
           new
           {
               @class = "form-control",
               @required = "required",
               @placeholder = Resource.Fullname
           })
    @Html.ValidationMessageFor(m => m.CustomerName)
</div>
<div class="form-group">
    @Html.TextBoxFor(m => m.Address,
           new
           {
               @class = "form-control",
               @required = "required",
               @placeholder = Resource.Address
           })
    @Html.ValidationMessageFor(m => m.Address)
</div>

<div class="form-group">
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", @required = "required", @placeholder = Resource.Email })
    @Html.ValidationMessageFor(m => m.Email)
</div>
<div class="form-group">
    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", type = "text", @required = "required", @placeholder = Resource.Phone })
    @Html.ValidationMessageFor(m => m.Phone)
</div>
<div class="form-group">
    @Html.TextAreaFor(m => m.Body, new { @class = "form-control", @rows = 6, @required = "required", @placeholder = Resource.Body })
    @Html.ValidationMessageFor(m => m.Body)
</div>
