@model Frontend.Models.ProductBoxViewModel

<div class="pr-body_item card_two">
    <div class="card_two__thumbnail">
        <a href="@Url.CustomAction(Store.Service.SystemService.RoutingType.Product, @Model.ProductID)"><img src="@Model.ImageUrl" alt="@Model.Title" loading="lazy" /></a>
    </div>
    <div class="card_two__content">
        <span class="card_two__label">Học cụ cho trẻ 0-3</span>
        <a href="@Url.CustomAction(Store.Service.SystemService.RoutingType.Product, @Model.ProductID)" class="card_two__title">
            <h3 class="card_two__title">@Model.Title</h3>
        </a>
        <div class="card_two__desc">
            <span>Độ tuổi: </span>
            <strong>@Model.Properties</strong>
        </div>
        <div class="card_two__price">
            <span class="price">@string.Format("{0:n0}", @Model.Price) VNĐ</span>
        </div>
    </div>
</div>

