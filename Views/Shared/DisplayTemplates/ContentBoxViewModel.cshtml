@model Frontend.Models.ContentBoxViewModel

<div class="t-all-product-info">
    <div class="t-product-img">
        <div class="image_wrapper">
            <a href="@Url.CustomAction(Store.Service.SystemService.RoutingType.Content, Model.ContentID)" class="image">
                <img src="@Model.PictureUrl" alt="@Model.Headline" title="@Model.Headline" class="img-responsive" />
            </a>
        </div>


    </div>
    <div class="tab-p-info">
        <a href="@Url.CustomAction(Store.Service.SystemService.RoutingType.Content, Model.ContentID)">@Model.Headline</a>
        <div class="description">@Model.Summary.RemoveHtml().Truncate(100)</div>
    </div>
</div>