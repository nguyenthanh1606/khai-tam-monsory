@model Frontend.Models.ProductGroupViewModel
@{
    string themeHomeViewPath = "~/Themes/" + TabWeb.GetCurrentTheme() + "/Views/Home/{0}.cshtml";
    int count = 0;
}

@if (Model.ListProduct.Any())
{
    <div class="bread-title"></div>
    <h1 class="title text-center">@Model.Title</h1>
    <div class="desc w-50 text-center m-auto">
        <i>@Model.Description.RemoveHtml().Truncate(220)</i>
    </div>
    <div class="list-products wrapper">
        <div class="swiper-container sw-products02 pt-3">
            <div class="swiper-wrapper">
                @foreach (var item in Model.ListProduct)
                {
                    <div class="swiper-slide">
                        <div class="thumnails-template item">
                            <div class="thumnails-content">
                                <a href="@Url.CustomAction(Store.Service.SystemService.RoutingType.Product, item.ProductID)" title="@item.Title">
                                    <img src="@item.ImageUrl" class="img-fluid" />
                                </a>
                            </div>
                        </div>
                        <div class="card-item-2">
                            <div class="title text-center">
                                <a href="@Url.CustomAction(Store.Service.SystemService.RoutingType.Product, item.ProductID)" title="@item.Title">
                                    @item.Title.Truncate(20)
                                </a>
                            </div>
                            <div class="price text-center">
                                @if (item.OriginalPrice > 0)
                                {
                                    <span class="price-del">@string.Format("{0:n0}", @item.OriginalPrice) Đ</span>
                                    <span class="color-main text-b">@string.Format("{0:n0}", @item.Price) Đ</span>
                                }
                                else
                                {
                                    <p class="color-main text-b">@string.Format("{0:n0}", @item.Price) Đ</p>

                                }
                            </div>
                            <div class="text-center mt-3">
                                <button class="bt-buy" type="submit" onclick="AddToCartAjax(@item.ProductID, AddToCartSuccess);">@Resource.BuyNow</button>
                            </div>                            
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

