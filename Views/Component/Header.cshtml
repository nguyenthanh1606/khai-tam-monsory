@using Store.Service.Models
@model Frontend.Models.HeaderViewModel

<div class="avs-top text-center small">
    <span>Liên hệ đặt hàng & hỗ trợ nhanh: <a href="tel:@Model.Hotline.Replace(",","")">@Model.Hotline</a></span>
    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="23" height="21"
         viewBox="0 0 23 21">
        <image id="phone" width="23" height="21"
               xlink:href="data:img/png;base64," />
    </svg>
</div>
<header>
    <div class="header-top">
        @{Html.RenderAction(MVC.Component.Display(4, "AdsLogoTop"));}


        <div class="wrapper">
            <div class="row justify-end">
                <div class="col top-menu">
                    @if (Model.TopMenu.GetAllChilds().Count() > 0)
                    {
                        <ul>
                            @foreach (var item in Model.TopMenu.GetAllChilds())
                            {
                                <li><a href="@item.Value.Url" class="text-uppercase small">@item.Value.MenuName</a></li>

                            }
                        </ul>
                    }

                </div>
                <div class="col lang">
                    <ul>
                        <li class="active"><a href="#!" class="text-uppercase small">Vie</a></li>
                        <li><a href="#!" class="text-uppercase small">Eng</a></li>
                    </ul>
                </div>
                @*<div class="col barket">
                    <a href="#!">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                             width="27" height="31" viewBox="0 0 27 31">
                            <image id="add-to-basket" width="27" height="31"
                                   xlink:href="data:img/png;base64," />
                        </svg>
                    </a>
                </div>*@
            </div>
        </div>
    </div>
    <div class="header">
        <div class="logo">
            <a href="/" title="@Model.SiteTitle">
                @Html.BannerImage(1, Request.Cookies["lang"].Value, new { id = "site-logo", @alt = "MNShop" })
            </a>
        </div>
        <div class="wrapper">
            <div class="row justify-end">
                <div class="main-menu">
                    @if (Model.MainMenu.GetAllChilds().Any())
                    {
                        <ul class="mn-1">
                            @foreach (var item in Model.MainMenu.GetAllChilds())
                            {
                                <li>
                                    <a href="@item.Value.Url" class="text-uppercase">@item.Value.MenuName</a>
                                    @if (item.GetAllChilds().Any())
                                    {
                                        <ul class="mn-2">
                                            @foreach (var item2 in item.GetAllChilds())
                                            {
                                                <li>
                                                    <a href="@item2.Value.Url" class="text-uppercase small">@item2.Value.MenuName</a>
                                                </li>
                                            }
                                        </ul>
                                    }
                                </li>
                            }
                        </ul>
                    }

                </div>
                <div class="form-search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Tìm kiếm tranh">
                        <button type="button" id="searchProduct" type="button" class="btn submit-search">
                            <i class="far fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
