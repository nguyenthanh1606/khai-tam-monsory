@model List<Frontend.Models.BannerViewModel>

@if (Model.Count() > 0)
{
    <div class="banner-home">
        <div class="swiper sw-BannerHome">
            <div class="swiper-wrapper">
                @foreach (var item in Model)
                {
                    var target = "";
                    if (item.OpenInNewTab == true)
                    {
                        target = "_blank";
                    }
                <div class="swiper-slide banner-home--item">
                    <div class="picture-home">
                        <img src="@item.ImageUrl" class="img-fluid" alt="@item.AdName">
                    </div>
                    <div class="wrapper">
                        <div class="banner-home--content">
                            <h2 class="title">@item.AdName</h2>
                            <div class="desc">
                                @Html.Raw(item.Content)
                            </div>
                            <div class="btn btn-1">
                                <a href="@item.Url" class="text-uppercase">Khám phá</a>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
}



