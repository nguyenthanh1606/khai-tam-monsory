@model List<Frontend.Models.BannerViewModel>


@if (Model.Count() > 0)
{
    <ul>

        @foreach (var item in Model)
        {
            var target = "";
            if (item.OpenInNewTab == true)
            {
                target = "_blank";
            }
            <li>
                <a href="@item.Url" target="target">
                    <img src="@item.ImageUrl" alt="@item.AdName" />
                </a>
            </li>
        }
    </ul>
}


