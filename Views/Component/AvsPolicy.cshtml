@model List<Frontend.Models.BannerViewModel>

@if (Model.Count() > 0)
{
    <div class="wrapper avs-policy">
        <div class="swiper sw-Policy">
            <div class="swiper-wrapper">
                @foreach (var item in Model)
                {
                    <div class="swiper-slide avs-policy--item">
                        <div class="picture-home">
                            <img src="@item.ImageUrl" class="img-fluid" alt="@item.AdName">
                        </div>
                        <div class="avs-policy--content">
                            <h2 class="title">@item.AdName</h2>
                            <div class="desc">
                                @Html.Raw(item.Content)
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
}



