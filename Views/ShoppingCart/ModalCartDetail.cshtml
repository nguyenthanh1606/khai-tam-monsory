@model Frontend.Models.CartItemViewModel

<div class="row">
    <div class="col-xs-6 col-md-6">
        <img class="img-fluid" src="@Model.ImageUrl" alt="@Model.Title">
    </div>
    <div class="col-xs-6 col-md-6">
        <p>@Resource.Product: <strong class="text-b toUpper">@Model.Title</strong></p>
        <div class="product-detail-price">@Resource.Price: <strong>@string.Format("{0:n0}", Model.Price) VNĐ</strong></div>
        @foreach (var property in Model.ListProperties)
        {
            <span>@property.Item1: <strong>@property.Item2</strong></span><br />
        }   
    </div>
</div>